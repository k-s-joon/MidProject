package ask.controller;

import java.io.IOException;
import java.util.List;

import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;
import javax.servlet.http.HttpSession;

import ask.service.IAskService;
import ask.service.AskServiceImpl;
import ask.vo.AskVO;
import member.service.IMemberService;
import member.service.MemberServiceImpl;
import member.vo.MemberVO;

@WebServlet(value = "/ask/list.do")
public class ListAskController extends HttpServlet {

	
	
	@Override
	protected void doGet(HttpServletRequest req, HttpServletResponse resp) throws ServletException, IOException {
		
		// 1. 서비스 객체 생성하기
		IAskService askService = AskServiceImpl.getInstance();

		// 2. 게시글 목록 정보 조회
		List<AskVO> askList = askService.listAllAsk();


		// 3. 뷰에서 사용할 데이터 저장하기
		req.setAttribute("askList", askList);

		// 4. 뷰 페이지로 전달하기
		req.getRequestDispatcher("/ask/listAsk.jsp").forward(req, resp);

	}

	@Override
	protected void doPost(HttpServletRequest req, HttpServletResponse resp) throws ServletException, IOException {
		
		// 아이디 값 받아오는 세션
	   	
		HttpSession session = req.getSession();
		IMemberService service = MemberServiceImpl.getInstance();
		String memId = (String) session.getAttribute("loginCode");
		MemberVO mv = new MemberVO();
		mv = service.getMember(memId);
	   
		
		doGet(req, resp);
	}
}
