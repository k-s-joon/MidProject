      return msgDao.updateMessage(msgv);
   }

   @Override
   public int removeMessage(String msgNo) {
      return msgDao.deleteMessage(msgNo);
   }

   @Override
   public List<MessageVO> listAllMessage(String loginCode) {
      return msgDao.selectAllMessage(loginCode);
   }

   @Override
   public List<MessageVO> searchAllMessage(String loginCode) {
