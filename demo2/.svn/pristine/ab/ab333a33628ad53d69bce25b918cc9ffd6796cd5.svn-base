   }
   
   public static IMessageService getInstance() {
      if(msgService == null) {
         msgService = new MessageService();
      }
      return msgService;
   }
   
   @Override
   public int registMessage(MessageVO msgv) {
      
      return msgDao.insertMessage(msgv);
